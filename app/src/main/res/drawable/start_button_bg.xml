<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed (when holding the click) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/darker_brown"/>  <!-- Slightly darker shade -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_brown"/>  <!-- Normal color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>