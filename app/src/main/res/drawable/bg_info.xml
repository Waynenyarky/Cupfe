<?xml version="1.0" encoding="utf-8"?>
<layer-list android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Lightest shadow, largest offset -->
    <item android:left="2dp" android:top="2dp" android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#1A000000"/> <!-- Light gray -->
            <corners android:radius="15dp"/>
        </shape>
    </item>

    <!-- Foreground Layer (Main White Box) -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">  <!-- Offset for shadow effect -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>


</layer-list>