<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed (when holding the click) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_brown"/>  <!-- Slightly darker shade -->
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/light_brown" android:width="1.5dp"/>  <!-- Normal color -->
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>