<?xml version="1.0" encoding="utf-8"?>
<selector android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed (when holding the click) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/trans_white"/>  <!-- Slightly darker shade -->
            <stroke android:color="@color/light_brown" android:width="1dp"/>
            <corners android:radius="50dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>  <!-- Normal color -->
            <stroke android:color="@color/light_brown" android:width="1dp"/>
            <corners android:radius="50dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
        </shape>
    </item>

</selector>