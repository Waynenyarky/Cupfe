<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/confirmation_bg"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/question_confirmation"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/light_brown"
            android:fontFamily="@font/sora_variablefont_wght"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txtTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ref No. V234809723"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/btnCopy"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/copy"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please confirm you order and copy the \nRef No. Thank you !"
        android:textColor="@color/black"
        android:textSize="13.5sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="7dp"/>


        <ImageView
            android:id="@+id/imgQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:contentDescription="Generated QR Code" />


    <TextView
        android:id="@+id/txtQrFallback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here if QR Code is not working"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_order_bg"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Proceed"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14.5sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">


        <View
            android:layout_width="0dp"
            android:layout_height="1.3dp"
            android:layout_weight="1"
            android:background="@color/light_brown" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="15sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/sora_variablefont_wght"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1.3dp"
            android:layout_weight="1"
            android:background="@color/light_brown"/>

    </LinearLayout>


        <Button
            android:id="@+id/btnGenerateQR"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Generate QR"
            android:layout_gravity="center"
            android:background="@drawable/button_order_bg"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/white"
            android:textSize="14.5sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:focusable="true"/>


    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_order_bg"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14.5sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/returnBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_order_bg"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Return to Home"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14.5sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:visibility="gone"/>

</LinearLayout>