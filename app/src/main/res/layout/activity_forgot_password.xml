<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="start"
        android:background="@drawable/close_btn_bg"
        android:src="@drawable/baseline_keyboard_arrow_left_24"
        android:layout_marginStart="32.7dp"
        android:contentDescription="Back Icon "
        android:layout_marginEnd="29dp"/>



        <TextView
            android:autoSizeMinTextSize="1dp"
            android:autoSizeMaxTextSize="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot"
            android:textSize="29sp"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textStyle="normal"
            android:textColor="@color/light_brown"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="30sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="100dp"
            android:textColor="@color/light_brown" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/forgotpass_icon"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trouble Signing In?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/sora_variablefont_wght"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your email and will send you \na link to reset your password."
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/sora_variablefont_wght"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:fontFamily="@font/sora_variablefont_wght"
        android:textColor="@color/light_brown"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text"
        android:hint="Enter your email"
        android:textSize="12sp"
        android:fontFamily="@font/sora_variablefont_wght"
        android:textStyle="normal"
        android:textColorHint="@color/grey2"
        android:textColor="@color/black"
        android:paddingStart="16dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:fontFamily="@font/sora_variablefont_wght"
        android:textColor="@color/light_brown"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="5dp"/>


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text"
            android:hint="Enter your new password"
            android:textSize="12sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textStyle="normal"
            android:textColorHint="@color/grey2"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:inputType="textPassword"
            android:paddingEnd="40dp"
            android:layout_marginStart="25dp"/>

        <ImageView
            android:id="@+id/ivEye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/eye_hide"
            android:focusable="true"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:fontFamily="@font/sora_variablefont_wght"
        android:textColor="@color/light_brown"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="5dp"/>


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etRePass"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text"
            android:hint="Re-enter password"
            android:textSize="12sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textStyle="normal"
            android:textColorHint="@color/grey2"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:inputType="textPassword"
            android:paddingEnd="40dp"
            android:layout_marginStart="25dp"/>

        <ImageView
            android:id="@+id/ivEye2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/eye_hide"
            android:focusable="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnOTP"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background3"
        android:fontFamily="@font/sora_variablefont_wght"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:foreground="?attr/selectableItemBackground"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="9dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Return to sign in page?"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textSize="15sp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>

        <TextView
            android:id="@+id/tvReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotPass"
            android:textSize="15sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textStyle="bold"
            android:textColor="@color/light_brown"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            android:minWidth="48dp"
            android:minHeight="48dp"/>

    </LinearLayout>




</LinearLayout>