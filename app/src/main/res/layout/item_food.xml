<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/favorite_card"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="15dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fav2"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/coffeename"
            android:text="Caffe Mocha"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="3dp"/>

        <TextView
            android:id="@+id/coffeeSubcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="10sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/coffeePrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="67.00"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="10sp"
                android:fontFamily="@font/sora_variablefont_wght"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/foodAdd"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:background="@drawable/add_to_cart"
                android:gravity="center"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Unavailable Floating Text -->
    <TextView
        android:id="@+id/unavailableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_unavailable_bg"
        android:text="Unavailable"
        android:textSize="10sp"
        android:textStyle="bold"
        android:fontFamily="@font/sora_variablefont_wght"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:padding="6dp"
        android:rotation="-20"/>

</FrameLayout>