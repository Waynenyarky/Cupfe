<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food_menu"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/floatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/float_bg"
        android:visibility="gone"
        android:elevation="10dp"
        android:padding="7dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/coffee_bag_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See all \nProducts"
            android:textSize="8sp"
            android:textColor="@color/light_brown"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingBottom="5dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="6dp">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            android:layout_gravity="start"
            android:contentDescription="Back Icon"
            android:background="@drawable/close_btn_bg"
            android:layout_marginEnd="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Menu"
            android:textStyle="bold"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="90dp"/>


        <ImageView
            android:id="@+id/ivCart"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/cart1"
            android:layout_gravity="start"
            android:contentDescription="Cart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp">


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_grey" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="420dp"
        android:layout_height="668dp"
        android:fillViewport="true"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Pick's"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="200dp"
                android:layout_marginBottom="-5dp"/>


            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:contentDescription="Horizontal"
                android:scrollbars="none"
                android:layout_marginBottom="10dp"
                android:overScrollMode="never"
                android:fadingEdge="none">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:padding="5dp">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/item1"/>

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/item2"/>

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/item3"/>

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/item4" />
                    <View
                        android:layout_width="35dp"
                        android:layout_height="match_parent"/>




                </LinearLayout>
            </HorizontalScrollView>


            <!--Drinks-->

