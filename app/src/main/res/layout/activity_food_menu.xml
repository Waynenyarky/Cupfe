<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food_menu"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="6dp">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            android:layout_gravity="start"
            android:contentDescription="Back Icon"
            android:layout_marginEnd="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Menu"
            android:textStyle="bold"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="90dp"/>


        <ImageView
            android:id="@+id/ivCart"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/cart1"
            android:layout_gravity="start"
            android:contentDescription="Cart"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp">


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_grey" />

    </LinearLayout>


    <ScrollView
        android:layout_width="420dp"
        android:layout_height="668dp"
        android:fillViewport="true"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categories"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="185dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show all"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sora_variablefont_wght"/>

            </LinearLayout>




            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:columnCount="3"
                android:rowCount="3">

                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_margin="-5dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hot_coffees"/>

                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_margin="-5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hot_drinks"/>

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:layout_margin="-5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hot_teas"/>

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:adjustViewBounds="true"
                    android:layout_margin="-5dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frappe"/>

                <ImageView
                    android:id="@+id/item5"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_margin="-5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iced_teas"/>

                <ImageView
                    android:id="@+id/item6"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_margin="-5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cold_drinks"/>

                <ImageView
                    android:id="@+id/item7"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_margin="-5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cold_coffees"/>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Coffee"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/popular1"
                android:layout_width="460dp"
                android:layout_height="75dp"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/caffe_mocha2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/cream" />

            </LinearLayout>

            <ImageView
                android:id="@+id/popular2"
                android:layout_width="460dp"
                android:layout_height="75dp"
                android:layout_marginStart="-25dp"
                android:src="@drawable/flat_white"
                android:layout_marginTop="5dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/cream"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/popular3"
                android:layout_width="460dp"
                android:layout_height="75dp"
                android:layout_marginStart="-25dp"
                android:src="@drawable/mocha_fusi"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/cream" />

            </LinearLayout>


            <ImageView
                android:id="@+id/popular4"
                android:layout_width="460dp"
                android:layout_height="75dp"
                android:layout_marginStart="-25dp"
                android:src="@drawable/caffe_panna"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/cream"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/popular5"
                android:layout_width="460dp"
                android:layout_height="75dp"
                android:layout_marginStart="-25dp"
                android:src="@drawable/matcha_latte"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:background="@color/cream" />

            </LinearLayout>


            <ImageView
                android:id="@+id/popular6"
                android:layout_width="460dp"
                android:layout_height="75dp"
                android:layout_marginStart="-25dp"
                android:src="@drawable/classic_espresso"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </ScrollView>








    <!--NAVIGATION-->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="331dp"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginStart="0.2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/homes" />

        <ImageView
            android:id="@+id/nav_cart"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:contentDescription="Cart"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/nav_favorite"
            android:layout_width="18dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:contentDescription="Favorite"
            android:src="@drawable/fav" />

        <ImageView
            android:id="@+id/nav_bag"
            android:layout_width="18dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:contentDescription="Bag"
            android:src="@drawable/notif" />

        <ImageView
            android:id="@+id/nav_notif"
            android:layout_width="18dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:contentDescription="Notification"
            android:src="@drawable/me" />

    </LinearLayout>

</LinearLayout>