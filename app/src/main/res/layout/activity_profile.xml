<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_profile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="10dp">


        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/white_back_btn"
            android:layout_gravity="start"
            android:background="@drawable/close_btn_bg"
            android:contentDescription="Back Icon"
            android:layout_marginEnd="90dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textStyle="bold"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginEnd="123dp"/>


    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageProfile"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@drawable/edit_pro"
        app:strokeWidth="2dp"
        app:strokeColor="@color/light_brown"
        android:padding="6dp"
        android:background="@color/light_grey"
        app:shapeAppearanceOverlay="@style/RoundedImageShape"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:textColor="@color/white"
            android:fontFamily="@font/sora_variablefont_wght"/>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Wayne "
            android:textColor="@color/white"
            android:fontFamily="@font/sora_variablefont_wght"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" !"
            android:textColor="@color/white"
            android:fontFamily="@font/sora_variablefont_wght"/>

    </LinearLayout>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="528dp"
        android:scrollbars="none"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="125dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"/>



            <!--Personal Info-->
            <LinearLayout
                android:id="@+id/personalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/profile_info" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Info"
                    android:textSize="19sp"
                    android:layout_marginTop="4dp"
                    android:textStyle="normal"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow" />


            </LinearLayout>



            <!--Transaction History-->
            <LinearLayout
                android:id="@+id/transactionHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/transaction_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction History"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow"/>


            </LinearLayout>


            <!--QR code-->
            <LinearLayout
                android:id="@+id/qrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/profile_qr_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR code"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow"/>


            </LinearLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help &amp; Policies "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp"/>

            <!--Application Terms-->
            <LinearLayout
                android:id="@+id/applicationTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/profile_application_form" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Applicaction Terms"
                    android:textSize="19sp"
                    android:layout_marginTop="4dp"
                    android:textStyle="normal"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow" />


            </LinearLayout>

            <!--Privacy Notice-->
            <LinearLayout
                android:id="@+id/privacyNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/profile_lock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Notice"
                    android:textSize="19sp"
                    android:layout_marginTop="4dp"
                    android:textStyle="normal"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow" />


            </LinearLayout>




            <!--Website Link-->
            <LinearLayout
                android:id="@+id/websiteLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/profile_website" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:text="Website Link"
                    android:textColor="@color/profile"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow" />


            </LinearLayout>

            <!--Feedback-->
            <LinearLayout
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/profile_feedback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <!--Help-->
            <LinearLayout
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/profile_help" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow"/>


            </LinearLayout>


            <!--Delete-->
            <LinearLayout
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/profile_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:textSize="19sp"
                    android:textStyle="normal"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/profile"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/right_arrow"/>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DO NOT SHARE MY PERSONAL INFORMATION"
                android:textSize="12sp"
                android:textStyle="normal"
                android:layout_gravity="start"
                android:textColor="@color/light_brown"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="20dp"/>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <Button
                    android:id="@+id/btnSigOut"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Sign Out"
                    android:textColor="@color/text_color_selector"
                    android:fontFamily="@font/sora_variablefont_wght"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:background="@drawable/button_sign_out"
                    android:gravity="center"
                    android:layout_marginStart="15dp"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 CupfeExpresso. All rights reserved."
                android:textSize="9sp"
                android:textStyle="normal"
                android:layout_gravity="start"
                android:textColor="@color/grey"
                android:layout_marginStart="95dp"
                android:layout_marginTop="40dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>
    </ScrollView>




    <!--NAVIGATION-->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/homes" />

        <ImageView
            android:id="@+id/nav_cart"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:contentDescription="Cart"
            android:src="@drawable/menu" />

        <ImageView
            android:id="@+id/nav_favorite"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:contentDescription="Favorite"
            android:src="@drawable/fav" />

        <ImageView
            android:id="@+id/nav_bag"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:contentDescription="Bag"
            android:src="@drawable/notif" />

        <ImageView
            android:id="@+id/nav_notif"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:contentDescription="Notification"
            android:src="@drawable/me" />

    </LinearLayout>
</LinearLayout>