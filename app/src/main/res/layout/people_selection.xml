<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/menu_popup"
    android:padding="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/light_brown"
        android:gravity="start"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"/>


    <EditText
        android:id="@+id/etPeopleCount"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:hint="Enter a number of peole (1-10)"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:background="@drawable/reservation_bg_border"
        android:padding="15dp"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">


        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/reservation_bg_button"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:background="@drawable/reservation_bg_button"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>




</LinearLayout>