<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/favorite_card"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="130dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/fav2"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/name"
            android:text="Caffe Mocha"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/subcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hot"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="67.00"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/sora_variablefont_wght"
                android:layout_marginEnd="9dp"/>

            <ImageView
                android:id="@+id/add"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/add_to_cart" />

        </LinearLayout>
    </LinearLayout>

    <!-- Unavailable Floating Text -->
    <TextView
        android:id="@+id/unavailableText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_unavailable_bg"
        android:text="Unavailable"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/sora_variablefont_wght"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:rotation="-20"
        android:layout_marginBottom="45dp"/>

</FrameLayout>