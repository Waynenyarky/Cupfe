<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrectangle"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomePage">


    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:layout_gravity="start"
            android:contentDescription="Back Icon"
            android:src="@drawable/baseline_dehaze_24" />


        <EditText
            android:layout_width="275dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/search"
            android:drawableStart="@drawable/ic_search_white"
            android:drawablePadding="10dp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:hint="Search coffee"
            android:paddingStart="25dp"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:inputType="text"
            android:autofillHints="name"/>

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="310dp"
        android:layout_height="140dp"
        android:layout_marginBottom="15dp"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Image of Cupfe"
                android:scaleType="centerCrop"
                android:src="@drawable/image1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Background rectangle design"
                android:scaleType="centerCrop"
                android:src="@drawable/image1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Introduction image for create or login"
                android:scaleType="centerCrop"
                android:src="@drawable/image1" />

        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@drawable/welcoming"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/streak" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/promos" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/receipts" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/reserve" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="1dp"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvAllCoffee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/text_hover"
                android:fontFamily="@font/sora_variablefont_wght"
                android:gravity="center"
                android:padding="8dp"
                android:text="All Coffee"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvAmericano"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/text_hover"
                android:fontFamily="@font/sora_variablefont_wght"
                android:gravity="center"
                android:padding="8dp"
                android:text="Americano"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tvLatte"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/text_hover"
                android:fontFamily="@font/sora_variablefont_wght"
                android:gravity="center"
                android:padding="8dp"
                android:text="Latte"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvMacchiato"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/text_hover"
                android:fontFamily="@font/sora_variablefont_wght"
                android:gravity="center"
                android:padding="8dp"
                android:text="Macchiato"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:padding="3dp"
        android:scrollbars="none">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="165dp"
            android:columnCount="2"
            android:rowCount="3">

            <ImageView
                android:id="@+id/item1"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Image of Cupfe"
                android:scaleType="centerCrop"
                android:src="@drawable/item1"
                android:padding="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/item2"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Background rectangle design"
                android:scaleType="centerCrop"
                android:src="@drawable/item2"
                android:padding="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/item3"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Introduction image for create or login"
                android:scaleType="centerCrop"
                android:src="@drawable/item3"
                android:padding="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/item4"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Another image"
                android:scaleType="centerCrop"
                android:src="@drawable/item4"
                android:padding="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/item5"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Introduction image for create or login"
                android:scaleType="centerCrop"
                android:src="@drawable/item5"
                android:padding="8dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/item6"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Another image"
                android:scaleType="centerCrop"
                android:src="@drawable/item6"
                android:padding="8dp"
                android:layout_marginRight="10dp"/>

        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="331dp"
        android:layout_height="45dp"
        android:layout_marginBottom="22dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/nav_cart"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="Cart"
            android:src="@drawable/food" />

        <ImageView
            android:id="@+id/nav_favorite"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="Favorite"
            android:src="@drawable/heart" />

        <ImageView
            android:id="@+id/nav_bag"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="Bag"
            android:src="@drawable/bag" />

        <ImageView
            android:id="@+id/nav_notif"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:contentDescription="Notification"
            android:src="@drawable/notification" />

    </LinearLayout>


</LinearLayout>