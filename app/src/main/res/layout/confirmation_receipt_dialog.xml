<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/confirmation_bg"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">



    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/check_in_confirmation"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordered"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfully"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/light_brown"
            android:fontFamily="@font/sora_variablefont_wght"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order has been placed successfully. \nThank you for choosing us!"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_order_bg"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

</LinearLayout>