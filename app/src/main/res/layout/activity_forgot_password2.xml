<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword2"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="start"
        android:background="@drawable/close_btn_bg"
        android:src="@drawable/baseline_keyboard_arrow_left_24"
        android:layout_marginStart="32.7dp"
        android:contentDescription="Back Icon "
        android:layout_marginEnd="29dp"/>

    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Check your Email"
        android:fontFamily="@font/sora_variablefont_wght"
        android:textColor="@color/light_brown"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="We sent a reset link to you email, check it now!"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textColor="@color/grey"
            android:textStyle="normal"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"/>



    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textColor="@color/grey"
            android:textStyle="normal"
            android:textSize="13sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contact@dscode.com"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textColor="@color/dgrey"
            android:textStyle="normal"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="3dp"/>

    </LinearLayout>




    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Enter 6 digit code that mentioned in the email."
        android:fontFamily="@font/sora_variablefont_wght"
        android:textColor="@color/grey"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginBottom="5dp"/>


        <EditText
            android:id="@+id/etOTP"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text"
            android:hint="Enter the sent OTP"
            android:textSize="12sp"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textStyle="normal"
            android:textColorHint="@color/grey2"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:maxLength="6"
            android:inputType="number"/>

    <Button
        android:id="@+id/btnResetPass"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Verify Code"
        android:textSize="16sp"
        android:fontFamily="@font/sora_variablefont_wght"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_background3"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="408dp"
        android:foreground="?attr/selectableItemBackground"/>




</LinearLayout>