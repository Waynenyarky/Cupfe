<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="44.5dp">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            android:layout_gravity="start"
            android:contentDescription="Back Icon"
            android:background="@drawable/close_btn_bg"
            android:layout_marginEnd="80.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="115dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/edit_camera"
            android:elevation="0.01dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="115dp"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagePicker"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/edit_pro"
                app:strokeWidth="2dp"
                app:strokeColor="@color/light_brown"
                android:padding="6dp"
                android:background="@color/light_grey"
                app:shapeAppearanceOverlay="@style/RoundedImageShape"/>
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/btnPhoto"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:background="@drawable/button_order_bg"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="Save Photo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Wayne Enrique"
        android:textColor="@color/light_brown"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>


    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pogijohnwayne@gmail.com"
        android:textColor="@color/blue"
        android:textSize="13sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_brown" />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full name"
                android:fontFamily="@font/sora_variablefont_wght"
                android:textColor="@color/light_brown"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="121dp"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/etFName"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:hint="Enter your full name"
                android:textSize="12sp"
                android:fontFamily="@font/sora_variablefont_wght"
                android:textStyle="normal"
                android:textColorHint="@color/grey2"
                android:textColor="@color/black"
                android:paddingStart="16dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btnSavedName"
                android:layout_width="311dp"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_order_bg"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Save Changes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/light_brown" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:fontFamily="@font/sora_variablefont_wght"
                android:textColor="@color/light_brown"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:fontFamily="@font/sora_variablefont_wght"
                android:textColor="@color/light_brown"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="5dp"/>


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text"
                android:hint="Enter your email"
                android:textSize="12sp"
                android:fontFamily="@font/sora_variablefont_wght"
                android:textStyle="normal"
                android:textColorHint="@color/grey2"
                android:textColor="@color/black"
                android:paddingStart="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password"
                android:fontFamily="@font/sora_variablefont_wght"
                android:textColor="@color/light_brown"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="105dp"
                android:layout_marginBottom="5dp"/>


            <RelativeLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etNewPass"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text"
                    android:hint="Enter your new password"
                    android:textSize="12sp"
                    android:fontFamily="@font/sora_variablefont_wght"
                    android:textStyle="normal"
                    android:textColorHint="@color/grey2"
                    android:textColor="@color/black"
                    android:paddingStart="16dp"
                    android:inputType="textPassword"
                    android:paddingEnd="40dp"
                    android:layout_marginStart="25dp"/>

                <ImageView
                    android:id="@+id/ivEye"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/eye_hide"
                    android:focusable="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:fontFamily="@font/sora_variablefont_wght"
                android:textColor="@color/light_brown"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="95dp"
                android:layout_marginBottom="5dp"/>


            <RelativeLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etRePass"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text"
                    android:hint="Re-enter password"
                    android:textSize="12sp"
                    android:fontFamily="@font/sora_variablefont_wght"
                    android:textStyle="normal"
                    android:textColorHint="@color/grey2"
                    android:textColor="@color/black"
                    android:paddingStart="16dp"
                    android:inputType="textPassword"
                    android:paddingEnd="40dp"
                    android:layout_marginStart="25dp"/>

                <ImageView
                    android:id="@+id/ivEye2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/eye_hide"
                    android:focusable="true"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnOTP"
                android:layout_width="311dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/button_order_bg"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Reset Password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>