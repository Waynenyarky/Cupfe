<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/favFoodLayout"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/favorite_card"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/radioCheck1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:button="@null"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle_non_check"
            android:contentDescription="Radio button"
            android:src="@drawable/done"/>

        <androidx.cardview.widget.CardView
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:layout_width="115dp"
            android:layout_height="70dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/fav2" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddCoffeeNameValue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/sora_variablefont_wght"
                    android:text="Caffee Mocha"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvComment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_variablefont_wght"
                android:text="``less ice"
                android:textColor="@color/black"
                android:textSize="9sp"
                android:textStyle="normal"
                android:layout_marginEnd="18dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAddSizeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sora_variablefont_wght"
                    android:text="Size:"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    android:layout_marginEnd="18dp"/>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp">

                <TextView
                    android:id="@+id/tvAddPriceValue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sora_variablefont_wght"
                    android:text="â‚± 67.00"
                    android:textColor="@color/black"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/tvMinus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/less"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:contentDescription="Minus"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/tvFavQuantityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"/>


                <TextView
                    android:id="@+id/tvAdd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/add"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:contentDescription="Minus"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>