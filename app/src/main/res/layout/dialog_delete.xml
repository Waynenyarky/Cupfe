<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:id="@+id/ivNoFavorites"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/empty_bag"
        android:contentDescription="No Favorites Icon"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="No item in your cart!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/sora_variablefont_wght"/>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Letâ€™s blend your bag with your cart picks and sweet deals!"
        android:textSize="13sp"
        android:textColor="@color/grey"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/sora_variablefont_wght"/>

    <Button
        android:id="@+id/btnFindCupFe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Find CupFe"
        android:backgroundTint="@color/light_brown"
        android:textColor="@android:color/white"
        android:fontFamily="@font/sora_variablefont_wght"
        android:textAllCaps="false"/>

</LinearLayout>