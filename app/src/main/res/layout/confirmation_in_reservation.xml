<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/menu_popup"
    android:padding="6dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Reservation?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="40dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note:"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:layout_gravity="start"
        android:layout_marginStart="18dp"
        android:lineSpacingMultiplier="1.2"/>





    <EditText
        android:id="@+id/etPeopleCount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter a number of person"
        android:background="@drawable/reservation_bg_border"
        android:padding="1dp"
        android:inputType="number"
        android:textSize="13sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/reservation_bg_button"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:background="@drawable/reservation_bg_button"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>






</LinearLayout>