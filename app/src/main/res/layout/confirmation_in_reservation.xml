<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/menu_popup"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="30dp"
    android:paddingStart="30dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="10dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/question_confirmation"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Bundle?"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_brown" />

    </LinearLayout>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Wayne"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/sora_variablefont_wght"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09123456789"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sora_variablefont_wght"/>


        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wayne@gmail.com"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sora_variablefont_wght"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_brown" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/hashtag"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Transaction ID"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/profile"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/btnCopy"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/copy"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/calendar"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Date"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/profile"
            android:fontFamily="@font/sora_variablefont_wght"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Time Selected"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/profile"
            android:fontFamily="@font/sora_variablefont_wght"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/table"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:id="@+id/tvPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/sora_variablefont_wght"
            android:textAlignment="textStart"
            android:textColor="@color/profile"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/people"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Guests Selected"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/profile"
            android:fontFamily="@font/sora_variablefont_wght"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/cash"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Prize in Reservation"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/profile"
            android:fontFamily="@font/sora_variablefont_wght"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/light_brown" />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note:"
            android:textSize="14sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
           android:layout_gravity="start"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:lineSpacingMultiplier="1.2"/>


    <EditText
        android:id="@+id/etPeopleCount"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter a number of person"
        android:background="@drawable/reservation_bg_border"
        android:padding="1dp"
        android:inputType="number"
        android:textSize="13sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@drawable/reservation_bg_button"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:background="@drawable/reservation_bg_button"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please double-check before confirming!"
        android:textStyle="italic"
        android:textSize="11sp"
        android:textColor="@color/dark_grey"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>
</LinearLayout>